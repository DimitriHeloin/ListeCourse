<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/etTitreListeCreer"
        android:hint="@string/placeholderTitreCreer" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:id="@+id/etNomArticleCreer"
            android:hint="Nom de l&apos;article" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etQuantiteArticleCreer" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btPlusCreer" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvArticlesCreer" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Articles favoris"
        android:id="@+id/tvArticlesFavorisCreer" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvListeFavorisCreer" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvNombreArticlesCreer"
        android:text="Nombre d&apos;articles :" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider liste"
        android:id="@+id/btValiderCreerListe" />

</LinearLayout>